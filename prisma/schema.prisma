// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // Relations
  publications Publication[]
  
  @@map("users")
}

model Publication {
  id          String   @id @default(cuid())
  title       String
  abstract    String?  @db.Text
  authors     String[]
  journal     String?
  year        Int?
  doi         String?  @unique
  url         String?
  pdfUrl      String?  @map("pdf_url")
  citationCount Int?   @default(0) @map("citation_count")
  
  // Audit fields
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  createdById String   @map("created_by_id")
  
  // Relations
  createdBy   User     @relation(fields: [createdById], references: [id], onDelete: Cascade)
  
  @@map("publications")
  @@index([year])
  @@index([createdById])
}

model Team {
  id          String   @id @default(cuid())
  name        String
  role        String?
  contact     String?
  description String?  @db.Text
  image       String?
  website     String?
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@map("teams")
}

model Settings {
  id        String   @id @default(cuid())
  name      String   @unique
  data      Json
  status    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@map("settings")
}

model News {
  id          String    @id @default(cuid())
  title       String
  content     String?   @db.Text
  url         String?   // For social media embeds (Twitter, Instagram, etc.)
  type        String    @default("announcement") // announcement, blog, social_embed
  platform    String?   // twitter, instagram, facebook, medium, youtube, linkedin, tiktok
  featured    Boolean   @default(false)
  status      Boolean   @default(true) // true = visible/active, false = hidden/inactive
  addedBy     String?   @map("added_by") // Optional author name as string
  publishedAt DateTime? @map("published_at") // Optional custom date
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  @@map("news")
  @@index([type])
  @@index([featured])
  @@index([status])
  @@index([publishedAt])
}

